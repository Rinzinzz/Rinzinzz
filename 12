    <div id="chat-container" class="chat-closed">
        <div id="chat-header">Chat with Bot</div>
        <div id="chat-messages"></div>
        <div id="chat-input-area">
            <input type="text" id="chat-input" placeholder="Type your message...">
            <button id="chat-send-button">Send</button>
        </div>
    </div>

    <script>
        const changeTextButton = document.getElementById("changeTextButton");
        const dynamicText = document.getElementById("dynamicText");
        const chatContainer = document.getElementById("chat-container");
        const chatHeader = document.getElementById("chat-header");
        const chatMessages = document.getElementById("chat-messages");
        const chatInput = document.getElementById("chat-input");
        const chatSendButton = document.getElementById("chat-send-button");

        let chatOpen = false;

        changeTextButton.addEventListener("click", function() {
            dynamicText.textContent = "The text has been changed!";
        });

        chatHeader.addEventListener("click", function() {
            chatOpen = !chatOpen;
            if (chatOpen) {
                chatContainer.classList.remove("chat-closed");
                chatContainer.classList.add("show");
            } else {
                chatContainer.classList.remove("show");
                chatContainer.classList.add("chat-closed");
            }
        });

        chatSendButton.addEventListener("click", function() {
            const message = chatInput.value;
            if (message.trim() === "") return;

            chatMessages.innerHTML += `<div class="message user-message">${message}</div>`;
            chatInput.value = "";

            setTimeout(function() {
                chatMessages.innerHTML += `<div class="message bot-message">This is a simulated response.</div>`;
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }, 1000);
            chatMessages.scrollTop = chatMessages.scrollHeight;

        });

        chatInput.addEventListener("keypress", function(e) {
            if (e.key === "Enter") {
                chatSendButton.click();
            }
        });

        setTimeout(() => {
            chatContainer.classList.add('show');
        }, 2000);

    </script>
</body>
